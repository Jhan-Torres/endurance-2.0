{
  "name": "endurance-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "Endurance - The Ultimate Password Manager monorepo",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@endurance/frontend",
    "dev:frontend": "npm run dev --workspace=@endurance/frontend",
    "build": "npm run build --workspace=@endurance/shared-types && npm run build --workspace=@endurance/frontend",
    "build:types": "npm run build --workspace=@endurance/shared-types",
    "build:frontend": "npm run build --workspace=@endurance/frontend",
    "preview": "npm run preview --workspace=@endurance/frontend",
    "type-check": "npm run type-check --workspace=@endurance/frontend",
    "install-all": "npm install",
    "clean": "rm -rf packages/*/node_modules packages/*/dist"
  },
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
